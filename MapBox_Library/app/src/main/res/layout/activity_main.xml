<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your origin adress"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/adressOrigin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Enter your destination adress"
        android:layout_below="@+id/adressOrigin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/adressDestination"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adressDestination"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/SearchButton" />

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:center_latitude="50.8466"
        mapbox:center_longitude="4.3528"
        mapbox:style_url="@string/style_mapbox_streets"
        mapbox:tilt="20"
        mapbox:zoom="12"
        android:layout_below="@+id/SearchButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </com.mapbox.mapboxsdk.maps.MapView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        mapbox:srcCompat="@drawable/ic_directions_car_black_24dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/adressDestination"
        android:layout_toRightOf="@+id/SearchButton"
        android:layout_toEndOf="@+id/SearchButton"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="11dp" />

    <TextView
        android:text="0km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/kmToDo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        mapbox:srcCompat="@android:drawable/ic_menu_recent_history"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/kmToDo"
        android:layout_toEndOf="@+id/kmToDo"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:id="@+id/imageView3" />

    <TextView
        android:text="0min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/kmToDo"
        android:layout_toRightOf="@+id/imageView3"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/journeyTime" />

</RelativeLayout>
